{
  "expo": {
    "name": "MediDoor",
    "slug": "MediDoor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/MediDoorLogo.png",
    "scheme": "MediDoor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icons/MediDoorLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
       "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to the camera to upload prescriptions.",
        "NSPhotoLibraryUsageDescription": "This app needs access to the photo library to upload prescriptions.",
        "NSPhotoLibraryAddUsageDescription": "This app saves photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/MediDoorLogo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/MediDoorLogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/MediDoorLogo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MediDoor to access your location."
        }
      ],
      "expo-camera",
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  }
}
